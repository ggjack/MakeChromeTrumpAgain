{
	"name" : "Make Chrome, Trump Again",
	"version" : "1000000.0",
	"manifest_version" : 2,
	"description" : "Lets the user see a glorious face while filtering useless and unnecessary websites",
	"icons" : {
			"128" : "images/icon128off.png",
			"128" : "images/icon128.png"
		},
	"background": {
    		"scripts": [ "jquery-1.12.2.min.js", "background.js" ],
    		"persistent": true
		
	},

	"options_page" : "options.html",
	"browser_action" : {
		"default_title" : "Make Chrome Trump Again",
		"default_icon" : "images/icon128off.png"
	},
	"permissions" : [
		"webNavigation",
		"activeTab",
		"tabs",
		"webRequest",
        "*://*/*",
        "webRequestBlocking"
	]
}
